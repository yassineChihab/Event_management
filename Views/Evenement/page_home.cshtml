@using CoreMigration.Models
@model IEnumerable<CoreMigration.Models.Activite>
@{
    Layout = "~/Views/Shared/_EvenementLayoutPage.cshtml";
    var i = 0;
    Activite newact = ViewData["newactivite"] as Activite;
}
<head>
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/col-offset-right.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/hover-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/animate.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Main.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/media.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/color-one.min.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-1.12.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/custom.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/wow.min.js")"></script>
</head>
<!-- Start Preloader -->
<div class="preloader">
    <div class="spinner">
        <div class="cube1"></div>
        <div class="cube2"></div>
    </div>
</div>
<!-- End Preloader -->
<!-- Start Caurosal -->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators hidden">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @foreach (Activite e in Model)
        {
            if (i == 0)
            {
                <div class="item active">
                    <img src="@e.piece_joint" class="img-responsive" alt="...">
                    <div>
                        <div class="carousel-caption">
                            <h2 class="h1">ENSA <span>SAFI</span></h2>
                            <p class="h1">
                                @e.titre
                            </p>
                            <a href="/Evenement/activitie/@e.id" class="btn btn-default">Voir plus</a>
                        </div>
                    </div>
                </div>
                i = 1;
            }
            else
            {
                <div class="item">
                    <img src="@e.piece_joint" class="img-responsive" alt="...">
                    <div>
                        <div class="carousel-caption">
                            <h2 class="h1">ENSA <span>SAFI</span></h2>
                            <p class="h1">
                                @e.titre
                            </p>
                            <a href="/Evenement/activitie/@e.id" class="btn btn-default">Voir plus</a>
                        </div>
                    </div>
                </div>
            }

        }
    </div>
    <!-- -->
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- End Caurosal -->
<!-- Start About Section -->
<section class="about text-center wow animate__bounceInUp" data-wow-duration=".8s">
    <div class="container">
        <h1 class="custom-heading"><span>Nouvel </span> événement</h1><br />
        <h1 class="custom-heading">@newact.titre</h1>
        <p class="lead"> @newact.description </p>
    </div>
</section>
<!-- End About Section -->
<!-- Start Section Our Team -->
<section class="our-team text-center" id="about" style="padding: 78px 0px 85px;">
    <div class="container" style="width: 100%; padding-right: 15px; padding-left: 15px; margin-right: auto; margin-left: auto;">
        <div class="row">
            <div class="col-md-6" style="flex: 0 0 50%; max-width: 50%;">
                <div class="about-image">
                    <img src="~/images/directeur.jpeg" class="main-img" alt="" style=" width: 70%; border-radius: 5px;">
                    <img src="/assets/images/pattern.png" class="pattern-img" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-content">
                    <h4 class="about-title" style="color: rgb(24, 43, 73);line-height: 35px;font-weight: 600;margin-bottom: 25px; font-family: Poppins, sans-serif;">
                        Mot du Directeur : Pr BENKHOUJA Khalil.
                    </h4>
                    <p class="about-para" style="font-size: 15px; color: rgb(150, 150, 150); line-height: 25px; margin-bottom: 40px;">
                        Chers Elèves Ingénieurs, Professeurs, Personnels Administratifs et Partenaires&nbsp;Chers visiteurs du Site Web de l'ENSA Safi
                        Dans le monde d'aujourd'hui, réussir sa carrière professionnelle est la principale préoccupation de nos chers futurs ingénieurs, mais c'est aussi notre ambition, notre challenge et surtout notre raison d'être....
                    </p>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="counter-box box1 text-center">
                                <h3 style="color: rgb(255, 111, 111);">
                                    <span><strong>+</strong>970</span><i class="las la-plus"></i>
                                </h3>
                                <p style="font-size: 14px; color: rgb(150, 150, 150); font-weight: 500;">Etudiants</p>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="counter-box box2 text-center">
                                <h3 style=" color: rgb(132, 71, 156);">
                                    <span><strong>+</strong>50</span><i class="las la-plus"></i>
                                </h3>
                                <p style="font-size: 14px; color: rgb(150, 150, 150); font-weight: 500;">Enseignants</p>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="counter-box box3 text-center">
                                <h3 style="color: rgb(59, 89, 152);">
                                    <span><strong>+</strong>248</span><i class="las la-plus"></i>
                                </h3>
                                <p style="font-size: 14px; color: rgb(150, 150, 150); font-weight: 500;">Cours</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Section Our Team -->
<!-- Start Section Stats -->
<section class="stats text-center">
    <div class="container">
        <h2 class="h1 custom-heading"><span>Nos</span> statistiques</h2>
        <div class="row" style=" width: 1500px;">
            <div class="col-sm-6 col-lg-3">
                <div class="statics">
                    <i class="fa fa-list fa-5x"></i>
                    <span class="number" data-count="@ViewData["nbrEvents"]">0</span>
                    <span class="title">Nos Evenemenets</span>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="statics">
                    <i class="fa fa-image fa-5x"></i>
                    <span class="number" data-count="@ViewData["nbrImages"]">0</span>
                    <span class="title">Nos Gallerie</span>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="statics">
                    <i class="fa fa-graduation-cap fa-5x"></i>
                    <span class="number" data-count="@ViewData["nbrLauriat"]">0</span>
                    <span class="title">Laureats</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Section Stats -->
<!-- Start Skills Section -->
<section class="skills  text-center">
    <div class="container">
        <h2 class="h1 custom-heading"><span>Les</span> Laureats de ENSA'S</h2>
        <div class="row">
            <div class="col-md-5">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 0%" data-progress="@ViewData["nbrLauriatGi"]">
                        <span>@ViewData["nbrLauriatGi"]% GI</span>
                    </div>
                </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 0%" data-progress="@ViewData["nbrLauriatGpmc"]">
                        <span>@ViewData["nbrLauriatGpmc"]% GPMC</span>
                    </div>
                </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 0%" data-progress="@ViewData["nbrLauriatGtr"]">
                        <span>@ViewData["nbrLauriatGtr"]% GTR</span>
                    </div>
                </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 0%" data-progress="@ViewData["nbrLauriatGind"]">
                        <span>@ViewData["nbrLauriatGind"]% GINDUS</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-1">
                <div class="skills-info">
                    <h3>Lauréats de ENSA's</h3>
                    <p class="lead">
                        Ils représentent toujours l'image parfaite de notre école
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Start Skills Section -->
<!-- Start Contact Us Section -->
<section class="contact text-center" id="contact">
    <div class="overlay">
        <div class="container">
            <h2 class="h1 custom-heading">
                <span>Contacter</span>
                <i class="fas fa-headset fa-lg contact-icon"></i>
                nous
            </h2>
            <form>
                <div class="row">
                    <div class="col-md-6 wow animate__bounceInLeft" data-wow-duration="1s">
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Ecrire votre Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control input-lg" placeholder="votre mot de pass">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="votre numero de telephone">
                        </div>
                    </div>
                    <div class="col-md-6 col-md-6 wow animate__bounceInRight" data-wow-duration="1s">
                        <div class="form-group">
                            <textarea class="form-control input-lg" placeholder="Ecrire une Message"></textarea>
                        </div>
                        <button type="button" class="btn btn-danger btn-lg btn-block">Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- End Contact Us Section -->
<!-- Start Our Clients Section -->
