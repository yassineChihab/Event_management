
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<CoreMigration.Models.Activite>
<div class="container">



    <div>
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Events</h3>

            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Event Title
                            </th>

                            <th style="width: 40%">
                                Event Description
                            </th>


                            <th style="width: 8%" class="text-center">
                                Status
                            </th>
                            <th style="width: 25%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>
                                    @e.id
                                </td>
                                <td>
                                    <a>
                                        @e.titre
                                    </a>
                                    <br />
                                    <small>
                                        @e.date
                                    </small>
                                </td>

                                <td>
                                    <small>
                                        @e.description
                                    </small>
                                </td>


                                <td class="project-state">
                                    @if (e.state == "enable")
                                    {
                                        <span class="badge badge-success">@e.state</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">@e.state</span>
                                    }

                                </td>
                                <td class="project-actions text-right">
                                    @if (e.state == "disable")
                                    {
                                        <a class="btn btn-primary btn-sm" href="/Home/show_event/@e.id">
                                            <i class="fas fa-eye">
                                            </i>
                                            Show
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-warning btn-sm" href="/Home/hide_event/@e.id">
                                            <i class="fas fa-eye-slash">
                                            </i>
                                            Hide
                                        </a>
                                    }
                                    <a class="btn btn-info btn-sm" href="/Home/modifier_event_page/@e.id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Home/delete_event/@e.id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>





</div>

